				<for list="${mechanisms}" param="mechanism">
					<sequential>
						<jar destfile="dist/awesome_runtime.jar" update="yes">
							<zipfileset src="@{mechanism}" includes="**/runtime/**"/>
						</jar>
					</sequential>
				</for>
			</then>
		</if>
		<copy file="dist/awesome_runtime.jar" tofile="dist/org.aspectj.runtime_1.7.3.20130613144500-a.jar"/>
	 </target>

	<target name="weaver">
