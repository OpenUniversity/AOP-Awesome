				</for>
			</then>
		</if>

		<java fork="true" classname="org.aspectj.tools.ajc.Main">
			<classpath>
				<pathelement path="${aspectjrt}"/>
				<pathelement path="${aspectjtools}"/>
				<fileset dir="libs">
                                        <include name="*.jar"/>
                                </fileset>
			</classpath>

			<arg line="-inpath ${inpath}"/>
                        <arg line="-outjar dist/awesome_weaver.jar"/>
		</java>

                <jar destfile="dist/awesome_weaver.jar" update="yes">
                        <manifest>
                                 <attribute name="Bundle-ClassPath" value="."/>
